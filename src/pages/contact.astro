---
import { Image } from 'astro:assets'
import Section from "../components/Section/Section.astro";
import SectionTitle from "../components/Typography/SectionTitle.astro";
import Layout from "../layouts/Layout.astro";
---

<Layout title="Aesthetic Allure.">
  <main>
    <Section background="white">
      <SectionTitle>Contacts &amp; Info</SectionTitle>
      <div class="bg-white">
        <div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
          <div class="divide-y-2 divide-gray-200">
            <div class="lg:grid lg:grid-cols-3 lg:gap-8 py-24 sm:py-32">
              <h2
                class="text-2xl font-bold text-gray-900 sm:text-3xl sm:tracking-tight"
              >
                Get in touch
              </h2>
              <div
                class="mt-8 grid grid-cols-1 gap-12 sm:grid-cols-2 sm:gap-x-8 sm:gap-y-12 lg:col-span-2 lg:mt-0"
              >
                <div>
                  <h3 class="text-lg font-medium leading-6 text-gray-900">
                    Email
                  </h3>
                  <dl class="mt-2 text-base text-gray-500">
                    <div>
                      <dt class="sr-only">Email</dt>
                      <dd>info@allurespa.co.uk</dd>
                    </div>
                  </dl>
                </div>
                <div>
                  <h3 class="text-lg font-medium leading-6 text-gray-900">
                    Phone
                  </h3>
                  <dl class="mt-2 text-base text-gray-500">
                    <div>
                      <dt class="sr-only">Phone</dt>
                      <dd>0800 002 9459</dd>
                    </div>
                  </dl>
                </div>
                <div>
                  <h3 class="text-lg font-medium leading-6 text-gray-900">
                    Consultation Bookings
                  </h3>
                  <dl class="mt-2 text-base text-gray-500">
                    <div>
                      <dt class="sr-only">Email</dt>
                      <dd>info@allurespa.co.uk</dd>
                    </div>
                  </dl>
                </div>
              </div>
            </div>
            <div class="bg-white py-24 sm:py-32">
              <div class="mx-auto max-w-2xl lg:mx-0">
                <h2 class="text-3xl font-bold tracking-tight text-gray-900">
                  Our Spa Location
                </h2>
              </div>
              <div
                class="mx-auto mt-16 grid max-w-2xl grid-cols-1 gap-8 text-base leading-7 sm:grid-cols-2 sm:gap-y-16 lg:mx-0 lg:max-w-none lg:grid-cols-4"
              >
                <div>
                  <h3
                    class="border-l border-rose-600 pl-6 font-semibold text-gray-900"
                  >
                    London
                  </h3>
                  <address
                    class="border-l border-gray-200 pt-2 pl-6 not-italic text-gray-600"
                  >
                    <p>24 Queensway</p>
                    <p>London, W2 3RX</p>
                  </address>
                </div>
                <div class="col-span-3">
                  <iframe
                    src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d7116.4335640603795!2d-0.09493509051500663!3d51.51274270557808!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x487603559b5f40c5%3A0x134c35e04ddca1ce!2s28%20Queen%20St%2C%20London%20EC4R%201BB!5e0!3m2!1sen!2suk!4v1681895190988!5m2!1sen!2suk"
                    width="100%"
                    height="300"
                    style="border:0;"
                    allowfullscreen=""
                    loading="lazy"
                    referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </Section>
  </main>
</Layout>
