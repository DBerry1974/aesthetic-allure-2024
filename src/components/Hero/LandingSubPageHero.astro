---
import { Image } from 'astro:assets'
interface Props {
  heading: string;
  subheading?: string;
  headerCopy?: string;
  image: string;
}
const { heading, subheading, headerCopy, image } = Astro.props;
---

<div class="relative bg-gray-50">
  <main class="lg:relative">
    <div
      class="mx-auto w-full max-w-7xl pt-16 pb-20 text-center lg:py-48 lg:text-left"
    >
      <div class="px-4 sm:px-6 lg:w-1/2 xl:pr-16">
        <h1
          class="text-4xl font-bold font-serif tracking-tight text-black sm:text-5xl md:text-6xl lg:text-5xl xl:text-6xl"
        >
          <span class="block pb-10 xl:inline">{heading}</span>
          <span
            class="block xl:inline text-black py-2"
            >{subheading}</span
          >
        </h1>
        <p
          class="mx-auto mt-3 max-w-md text-lg text-neutral-800 font-light sm:text-xl md:mt-5 md:max-w-3xl"
        >
          {headerCopy}
        </p>
       
      </div>
    </div>
    <div
      class="relative h-64 w-full sm:h-72 md:h-96 lg:absolute lg:inset-y-0 lg:right-0 lg:h-full lg:w-1/2"
    >
      <Image
        class="absolute inset-0 h-full w-full object-cover"
        src={image}
        format="webp"
        alt={`Hero Image - ${heading}`}
        width={1200}
        aspectRatio={4 / 3}
      />
    </div>
  </main>
</div>
