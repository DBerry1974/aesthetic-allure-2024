---
interface Props {
  href?: string;
  marginTop?: boolean;
  newTab?: boolean;
}
const { href, onClick, marginTop = true, newTab = false } = Astro.props;
---

{
  !!href ? (
    <a
      href={href}
      target={newTab ? "_blank" : "_self"}
      rel="noopener noreferrer"
      class={`${
        marginTop && "mt-6"
      } block rounded sm:inline-flex items-center text-center uppercase no-underline bg-rose-400 px-5 py-3 text-sm sm:text-lg tracking-wider font-bold text-keld-slate shadow-sm hover:bg-rose-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-keld-yellow focus:ring-offset-2`}
    >
      <slot />
    </a>
  ) : (
    <button
      onclick={onClick}
      class={`${
        marginTop && "mt-6"
      }  block rounded sm:inline-flex items-center text-center uppercase no-underline bg-rose-400 px-5 py-3 text-sm sm:text-lg tracking-wider font-bold text-keld-slate shadow-sm hover:bg-rose-600 hover:text-white focus:outline-none focus:ring-2 focus:ring-keld-yellow focus:ring-offset-2`}
    >
      <slot />
    </button>
  )
}
