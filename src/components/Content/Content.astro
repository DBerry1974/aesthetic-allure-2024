---
interface Props {
  modifiers?: string;
}

const { modifiers = "" } = Astro.props;
---

<div class="relative px-4 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-prose text-lg">
    <div
      class={`prose prose-lg prose-indigo mx-auto text-neutral-900 font-light ${modifiers}`}
    >
      <slot />
    </div>
  </div>
</div>
